@model MvcOnlineTradeAutomation.Models.Class.Trade


@using (Html.BeginForm("CariBilgiGuncelle", "TradePanel", FormMethod.Post))
{
<form class="form-horizontal">

    @*<div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Id</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.TradeID, new { @class = "form-control" })

        </div>

    </div>*@
    @Html.HiddenFor(x => x.TradeID)
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Ad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.TradeName, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyad</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.TradeSurname, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Mail Adresi</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.TradeMail, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.TradeCity, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Şifre</label>
        <div class="col-sm-10">
            <div class="input-group">
                @Html.TextBoxFor(x => x.Tradepassword, new { @class = "form-control", type = "password" })
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                        <i class="fa fa-eye" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> Bilgilerimi Okudum Şifremi Değiştirmek İstiyorum.

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>

}

<!-- /Şifre yanında js kodları şifreyi gösterip göstermemesi -->
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordField = document.getElementById("Tradepassword");
        var icon = this.querySelector("i");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    });
</script>
