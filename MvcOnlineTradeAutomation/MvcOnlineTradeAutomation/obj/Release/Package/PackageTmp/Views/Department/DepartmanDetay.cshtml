@using MvcOnlineTradeAutomation.Models.Class
@model List<Personnel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
        <th>Personel </th>
        <th>Satışlar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PersonnelName @x.PersonnelSurname</td>
            <td><a href="/Department/DepartmanPersonelSatis/@x.PersonnelID" class="btn btn-default" style="background-color:darkgrey">Satışlar</a></td>
        </tr>
    }

</table>