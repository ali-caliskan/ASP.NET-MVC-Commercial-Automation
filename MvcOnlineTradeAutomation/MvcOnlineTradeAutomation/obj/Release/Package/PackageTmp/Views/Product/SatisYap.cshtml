@model MvcOnlineTradeAutomation.Models.Class.SalesMovement
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Satış Yap</h2>

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.ProductsID)
    <input type="text" name="ProductsID" value="@ViewBag.dgr1" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.PersonnelID)
    @Html.DropDownListFor(x => x.PersonnelID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TradeID)
    @Html.TextBoxFor(x => x.TradeID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.quantity)
    <input type="number" class="form-control" max="10" min="0" placeholder="Lütfen Ürün Miktarını Giriniz." id="txt1" onchange="sum();" name="quantity" />
    <br />
    @Html.LabelFor(x => x.Price)
    <input type="text" name="Price" value="@ViewBag.dgr2" class="form-control" id="txt2" onkeyup="sum();" />
    <br />
    @Html.LabelFor(x => x.TotalAmount)
    <input type="text" name="TotalAmount" value="0" class="form-control" id="txt3" readonly />
    @*@Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })*@
    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
<br />
<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }

    }
</script>