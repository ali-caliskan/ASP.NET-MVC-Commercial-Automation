@using MvcOnlineTradeAutomation.Models.Class;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Product", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    </tr>
    @foreach (var u in Model)
    {
        <tr>
            <td>@u.ProductsName</td>
            <td>@u.Brand</td>
            <td>@u.Stock</td>
            <td>@u.BuyPrice ₺</td>
            <td>@u.SalesPrice ₺</td>
            <td>@u.Category.CategoryName</td>
            <td>
                <a href="/Product/UrunSil/@u.ProductsID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Product/UrunGetir/@u.ProductsID" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/Product/SatisYap/@u.ProductsID" class="btn btn-info">Satış Yap</a>
            </td>
        </tr>
    }
</table>


<a href="/Product/YeniUrun/" class="btn btn-info">Yeni Ürün Ekle</a>

