@model IEnumerable<MvcOnlineTradeAutomation.Models.Class.ClassGroup2>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sirano = 0;}
                @foreach (var x in Model)
                {

                <tr>
                    <td>@{sirano++;} @sirano</td>
                    <td>@x.Department</td>
                    <td>
                        @if (x.number == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        }
                        @if (x.number == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 70%"></div>
                            </div>
                        }
                        @if (x.number == 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 70%"></div>
                            </div>
                        }
                    </td>
                    @if (x.number == 1)
                    {
                        <td><span class="badge bg-info">@x.number</span></td>
                    }
                    @if (x.number == 2)
                    {
                        <td><span class="badge bg-warning">@x.number</span></td>
                    }
                    @if (x.number == 3)
                    {
                        <td><span class="badge bg-success">@x.number</span></td>
                    }
                </tr>
                   
                }



            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
