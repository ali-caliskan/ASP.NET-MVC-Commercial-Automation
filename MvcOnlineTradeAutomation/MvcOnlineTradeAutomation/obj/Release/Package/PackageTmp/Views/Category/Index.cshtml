@using MvcOnlineTradeAutomation.Models.Class
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>

        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.CategoryName
            </td>

            <td><a href="/Category/KategoriSil/@k.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/KategoriGetir/@k.CategoryID" class="btn btn-success">Güncelle</a></td>


        </tr>
    }
</table>

<!-- CSS TABLO ALTINDAKİ SAYILAR-->
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa })
,new PagedListRenderOptions 
{
    LiElementClasses = new List<string>
    { "page-link "}
})


<a href="/Category/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>

