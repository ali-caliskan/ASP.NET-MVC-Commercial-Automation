@model MvcOnlineTradeAutomation.Models.Class.CargoDetail
@{
    ViewBag.Title = "YeniKargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Kargo Bilgisi</h2>
<br />
<form class="from-group" method="post">
    @Html.LabelFor(x => x.TrackingCode)
    <input type="text" value="@ViewBag.takipkod" class="form-control" readonly name="TrackingCode" />
    <br />
    @Html.LabelFor(x => x.Personnel)
    @Html.TextBoxFor(x => x.Personnel, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Buyer)
    @Html.TextBoxFor(x => x.Buyer, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Date)
    <input class="form-control" type="date" name="Date" />
    <br />
    @Html.LabelFor(x => x.Statement)
    @Html.TextAreaFor(x => x.Statement, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>
