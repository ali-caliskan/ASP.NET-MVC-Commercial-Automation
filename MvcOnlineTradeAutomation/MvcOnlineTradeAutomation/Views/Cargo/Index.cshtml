@using MvcOnlineTradeAutomation.Models.Class
@model List<CargoDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Cargo", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personnel</td>
            <td>@k.Buyer</td>
            <td>@k.Date</td>
            <td>@k.TrackingCode</td>
            <td><a href="/Cargo/KargoTakip/@k.TrackingCode" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Cargo/YeniKargo" class="btn btn-info">Yeni Kargo Girişi</a>



