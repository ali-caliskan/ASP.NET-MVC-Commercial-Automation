@using MvcOnlineTradeAutomation.Models.Class
@model List<InvoicePen>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Fatura Kalemleri Sayfası</h2>
<br />

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.InvoicePenID</td>
            <td>@x.Description</td>
            <td>@x.Quantity</td>
            <td>@x.UnitPrice</td>
            <td>@x.Amount</td>
        </tr>
    }

</table>

<a href="/Invoice/YeniKalem/" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>
